{
  "name": "refi-contracts",
  "version": "1.0.0",
  "description": "This project demonstrates an advanced Hardhat use case, integrating other tools commonly used alongside Hardhat in the ecosystem.",
  "main": ".eslintrc.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean && rm -rf ./types ./build",
    "deploy:testnet": "npx hardhat run --config hardhat.config.testnet.ts --network metis_testnet",
    "deploy:local": "npx hardhat run --config hardhat.config.local.ts --network metis_local"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@codechecks/client": "^0.1.12",
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/bytes": "^5.5.0",
    "@ethersproject/providers": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.7.0",
    "hardhat-gas-reporter": "^1.0.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.4",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.0",
    "openzeppelin-solidity": "^4.4.0",
    "pino": "^7.5.1",
    "pino-pretty": "^7.3.0"
  }
}